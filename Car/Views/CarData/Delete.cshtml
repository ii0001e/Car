@model Car.Models.CarData.CarDataDeleteViewModel

<div class="container">
    <div class="accordion-header">
        Delete

    </div>
    <hr />
    <div class="movetable">
        <dl class="row">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.Id)
            </div>

            <div class="form-group row">
                <label asp-for="Mark" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.Mark)
            </div>

            <div class="form-group row">
                <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.Brand)
            </div>

            <div class="form-group row">
                <label asp-for="BodyType" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.BodyType)
            </div>

            <div class="form-group row">
                <label asp-for="BuildingYear" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.BuildingYear)
            </div>
            <div class="form-group row">
                <label asp-for="EngineCapacity" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.EngineCapacity)
            </div>
            <div class="form-group row">
                <label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.EnginePower)
            </div>
            <div class="form-group row">
                <label asp-for="FuelType" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.FuelType)
            </div>

            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.CreatedAt)
            </div>

            <div class="form-group row">
                <label asp-for="Modifieted" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => Model.Modifieted)
            </div>
        </dl>
    </div>
    <hr />
    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />
        <input type="submit" style="position: absolute; top:70%;" value="Delete" class="btn btn-danger" />
        <a asp-action="index" style="position: absolute; top:70%; left: 14%;" class="btn btn-primary">Back</a>
    </form>
</div>
